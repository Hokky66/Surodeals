    "passport-local": "^1.0.0",
    "passport-openidconnect": "^0.1.2",
    "stripe": "^17.3.1",
    "tsx": "^4.19.0",
    "validator": "^13.12.0",
    "vite": "^7.0.6",
    "ws": "^8.18.0",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.6",
    "@types/memoizee": "^0.4.12",
