{
  "name": "surodeals",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "npm run dev:server",
    "dev:client": "echo 'client disabled'",
    "dev:server": "cross-env NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:server",
    "install:deps": "cd client && npm install",
    "build:client": "cd client && npm run build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --external:pg-native",
    "start": "set NODE_ENV=production&& node dist/index.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@jridgewell/trace-mapping": "^0.3.25",
