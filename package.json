    "@stripe/stripe-js": "^7.4.0",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.30.0",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "esbuild": "^0.21.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "memoizee": "^0.4.17",
    "memorystore": "^1.6.7",
